{
  // üëÄ VS Code UI
  "editor.cursorBlinking": "smooth",
  "workbench.iconTheme": "material-icon-theme",
  // ‚öôÔ∏è Common settings
  "window.restoreWindows": "all",
  "window.openFoldersInNewWindow": "on",
  "window.openFilesInNewWindow": "off",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "search.useGlobalIgnoreFiles": true,
  // "files.autoSave": "onFocusChange",
  "files.associations": {
    "Dockerfile-*": "dockerfile"
  },
  // ‚úçÔ∏è Editor
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Hack Nerd Font Mono",
  // "editor.fontSize": 16,
  // "editor.lineHeight": 32,
  "editor.rulers": [
    120
  ],
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.tree.horizontalScrolling": true,
  "files.trimTrailingWhitespace": true,
  // ‚¨õ Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1,
  // üë®‚Äçüíª Programming languages
  // Avoid duplicate suggestions with PHP IntelliSense plugin
  // "php.suggest.basic": false,
  // "php.executablePath": "/usr/local/bin/php",
  "[markdown]": {
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": false // Converts "*" lists into "-" and other nasty things :/
  },
  // üêô Git
  "git.autofetch": true,
  "git.alwaysSignOff": true,
  "git.defaultCloneDirectory": "~/dev",
  "git.fetchOnPull": true,
  "git.rebaseWhenSync": true,
  "git.showPushSuccessNotification": true,
  // üé® CodelyTV theme draft
  "workbench.colorCustomizations": {
    "focusBorder": "#10fb7a"
  },
  "workbench.statusBar.visible": true,
  "git.detectSubmodules": false,
  "editor.tabSize": 2,
  "eslint.format.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "javascript.preferences.quoteStyle": "single",
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "cSpell.language": "en,en-US",
  "todo-tree.tree.showScanModeButton": false,
  "kite.showWelcomeNotificationOnStartup": false,
  "amlLanguageServer.run.logPath": "/Users/lcontreras/mulesoft/databridge-model/AMF.log",
  "[raml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.log": "default",
    "*.tfplan": "default",
    "*.zip": "default"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.tabs.location": "left",
  "files.autoSave": "onFocusChange",
  "cSpell.userWords": [
    "middyfy",
    "middyfyparser",
    "uuidv"
  ],
  "editor.unicodeHighlight.invisibleCharacters": false
}